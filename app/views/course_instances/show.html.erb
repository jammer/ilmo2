<h2>Course: <%= h @course_instance.course.name %> <%=h @course_instance.name %></h2>

<h2>Exercise Groups:</h2>

<% if @course_instance.exercise_groups.any? %>
<ul>
<% @course_instance.exercise_groups.each do |exercise_group| %>
   <li><%= link_to exercise_group.name, course_course_instance_exercise_group_path(@course_instance.course, @course_instance, exercise_group) %> <%= exercise_group.status %></li>
<% end %>
</ul>
<% else %>
	<p>No exercise groups.</p>
<% end %>

<h2>Send anonymous feedback</h2>
<% form_tag course_course_instance_feedbacks_path(@course_instance.course, @course_instance) do %>
  <p>
  <%= text_area_tag :feedback, nil, :rows => 10, :cols => 40 %>
  </p>
  <p><%= submit_tag "Send", :id => "submit", :name => "submit", :disable_with => "Sending..."%></p>
<% end %>

<%= link_to 'Back', course_path(@course_instance.course) %>

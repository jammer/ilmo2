<h1>Welcome to Ilmo 2.0!</h1>

 <% form_tag "/login" do%>
<p>
    <%= label_tag "Username" %><br />
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag "Password" %><br />
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag "Log in"%>
  </p>
<% end %>

<p><%= link_to 'Register', new_user_path %></p>

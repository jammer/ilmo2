<h1>Editing exercise_group</h1>

<% form_for(@exercise_group, :url => course_course_instance_exercise_group_path(@exercise_group.course_instance.course, @exercise_group.course_instance, @exercise_group)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :course_instance_id %><br />
    <%= f.text_field :course_instance_id %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', course_course_instance_exercise_group_path(@exercise_group.course_instance.course, @exercise_group.course_instance, @exercise_group) %>
